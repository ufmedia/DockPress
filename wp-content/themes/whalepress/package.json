{
	"name": "wptailpack",
	"version": "2.0.0",
	"description": "NPM Scripts for the WhalePress theme.",
	"scripts": {
	  "build:assets": "webpack --mode production",
	  "build": "npm run lint:js:fix && npm run lint:css:fix && npm run build:assets",
	  "dev": "webpack --mode development",
	  "watch": "webpack --watch --mode development",
	  "lint:js": "eslint 'public/src/js/**/*.js'",
	  "lint:js:fix": "eslint 'public/src/js/**/*.js' --fix",
	  "lint:php": "phpcs --report-file=PHPCS-report.txt --ignore=*/vendor/*,tests,build --standard=WordPress *.php **/*.php **/**/*.php",
	  "lint:php:fix": "phpcbf --ignore=*/vendor/*,tests,build --standard=WordPress *.php **/*.php **/**/*.php",
	  "lint:css": "stylelint 'public/src/scss/**/*.scss'",
	  "lint:css:fix": "stylelint 'public/src/scss/**/*.scss' --fix"
	},
	"author": "John Thompson",
	"license": "ISC",
	"devDependencies": {
	  "@eslint/js": "^9.10.0",
	  "@tailwindcss/typography": "0.5.15",
	  "@wordpress/eslint-plugin": "^21.0.0",
	  "css-loader": "^7.1.2",
	  "eslint": "^8.57.0",
	  "eslint-plugin-prettier": "^5.2.1",
	  "glob-all": "^3.3.1",
	  "globals": "^15.9.0",
	  "ignore-loader": "^0.1.2",
	  "mini-css-extract-plugin": "^2.9.1",
	  "postcss-import": "16.1.0",
	  "postcss-loader": "8.1.1",
	  "postcss-nested": "6.2.0",
	  "postcss-nested-ancestors": "3.0.0",
	  "postcss-preset-env": "10.0.2",
	  "prettier": "^3.3.3",
	  "sass": "^1.78.0",
	  "sass-loader": "^16.0.1",
	  "style-loader": "^4.0.0",
	  "stylelint": "^16.9.0",
	  "stylelint-config-standard-scss": "^13.1.0",
	  "tailwindcss": "3.4.10",
	  "webpack": "^5.94.0",
	  "webpack-cli": "^5.1.4",
	  "webpack-merge": "^6.0.1"
	}
  }
  